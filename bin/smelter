#!/usr/bin/env perl

use strict;
use warnings;
use FindBin;
use lib "$FindBin::RealBin/../lib";
use Getopt::Long;
use CIHM::Meta::Smelter;

use Fcntl qw(:DEFAULT :flock);
my $lockfile = '/var/lock/tdr/smelter';

# Only allow one instance to run at a time..
sysopen( FH, $lockfile, O_WRONLY | O_CREAT )
  or die "can't open lockfile=$lockfile: $!\n";
flock( FH, LOCK_EX | LOCK_NB )
  or exit 0;

my $conf     = "/etc/canadiana/tdr/tdr.conf";
my $skip     = 0;
my $maxprocs = 4;
my $limit;
my $timelimit;
my $descending;
GetOptions(
    'conf:s'      => \$conf,
    'skip:i'      => \$skip,
    'maxprocs:i'  => \$maxprocs,
    'limit:i'     => \$limit,
    'timelimit:i' => \$timelimit,
    'descending'  => \$descending
);

CIHM::Meta::Smelter->new(
    {
        configpath => $conf,
        skip       => $skip,
        maxprocs   => $maxprocs,
        limit      => $limit,
        timelimit  => $timelimit,
        descending => $descending
    }
)->smelter;

1;
__END__
